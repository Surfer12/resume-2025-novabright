{
  "name": "dashboard-backend",
  "version": "1.0.0",
  "description": "Optimized GraphQL API for dashboard with AWS Lambda",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc && npm run copy-assets",
    "copy-assets": "cp -r src/assets dist/ 2>/dev/null || true",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts,.js",
    "type-check": "tsc --noEmit",
    "lambda:build": "npm run build && zip -r lambda-deployment.zip dist node_modules",
    "lambda:deploy": "aws lambda update-function-code --function-name dashboard-api --zip-file fileb://lambda-deployment.zip",
    "benchmark": "node scripts/benchmark.js"
  },
  "dependencies": {
    "@apollo/server": "^4.12.2",
    "@apollo/server-plugin-response-cache": "^4.1.3",
    "@aws-sdk/client-dynamodb": "^3.454.0",
    "@aws-sdk/client-elasticache": "^3.454.0",
    "@aws-sdk/lib-dynamodb": "^3.454.0",
    "@graphql-tools/schema": "^10.0.23",
    "@types/body-parser": "^1.19.6",
    "@types/express": "^5.0.3",
    "@types/ws": "^8.18.1",
    "aws-lambda": "^1.0.7",
    "body-parser": "^2.2.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dataloader": "^2.2.2",
    "express": "^5.1.0",
    "graphql": "^16.8.1",
    "graphql-redis-subscriptions": "^2.6.0",
    "graphql-scalars": "^1.22.4",
    "graphql-ws": "^6.0.5",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "lodash": "^4.17.21",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "ws": "^8.18.2"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.130",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.19",
    "@types/jest": "^29.5.8",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "serverless": "^3.38.0",
    "serverless-esbuild": "^1.48.1",
    "serverless-offline": "^13.3.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
